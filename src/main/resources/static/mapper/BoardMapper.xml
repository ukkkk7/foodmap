<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="pairproject.foodmap.repository.BoardMapper">

    <resultMap id="boardMap" type="pairproject.foodmap.domain.Board">
        <id property="boardId" column="board_id" />
        <result property="title" column="title" />
        <result property="content" column="content" />
        <result property="regDate" column="reg_date" />
        <result property="userId" column="user_id" />
        <result property="storeId" column="store_id" />

        <association property="store" javaType="pairproject.foodmap.domain.Store">
            <id property="storeId" column="store_id"/>
        </association>
        <association property="user" javaType="pairproject.foodmap.domain.User">
            <id property="userId" column="user_id"/>
        </association>
    </resultMap>

    <insert id="saveAndGetId" useGeneratedKeys="true" keyProperty="boardId"
            parameterType="pairproject.foodmap.domain.Board" >
        INSERT INTO board(title, content, user_id, store_id)
        values (#{title}, #{content}, #{userId}, #{storeId})
    </insert>

    <select id="findById" parameterType="long">
        SELECT * FROM board
        WHERE board_id = #{boardId}
    </select>

    <select id="findAll">
        SELECT * FROM board
    </select>

    <update id="edit">
        UPDATE board
        SET title = #{board.title}, content = #{board.content}
        WHERE board_id = #{boardId}
    </update>
    
    <delete id="deleteById" parameterType="long">
        DELETE FROM board
        WHERE board_id = #{boardId}
    </delete>

    <select id="findBoardIdByStoreId" parameterType="long">
        SELECT * FROM board
        WHERE store_id = #{storeId}
    </select>
</mapper>