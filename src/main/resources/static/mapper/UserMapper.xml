<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="pairproject.foodmap.repository.UserMapper">

    <resultMap id="userMap" type="pairproject.foodmap.domain.User">
        <id property="userId" column="user_id" />

        <association property="grade" javaType="pairproject.foodmap.domain.Grade">
            <id property="grade" column="grade"/>
        </association>
    </resultMap>

    <update id="editUserGrade">
        UPDATE user SET grade = #{grade} WHERE user_id = #{userId}
    </update>

    <select id="findUserById" parameterType="long">
        SELECT * FROM user WHERE user_id = #{userId}
    </select>

    <insert id="save" parameterType="pairproject.foodmap.domain.User">
        INSERT INTO user(mail, password, name, birth, role, grade)
        VALUES (#{mail}, #{password}, #{name}, #{birth}, #{role}, #{grade})
    </insert>


</mapper>